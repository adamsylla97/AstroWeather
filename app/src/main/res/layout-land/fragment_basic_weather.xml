<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#86F4B0"
             tools:context=".WeatherBasicFragment"
             android:stretchColumns="*">


    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/actualTimeWeather"
                android:textAlignment="center"
                android:layout_span="2"
                android:textSize="48sp"
                android:textStyle="bold"/>
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/city"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"/>

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/longitudeWeather"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"/>

    </TableRow>


    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Miejscowość"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textAlignment="center"
                android:textSize="18sp"/>

        <TextView
                android:text="Długość geograficzna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textAlignment="center"
                android:textSize="18sp"/>
    </TableRow>


    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/temperature"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"/>

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/latitudeWeather"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"/>

    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Temperatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:textAlignment="center"
                android:textSize="18sp"/>

        <TextView
                android:text="Szerokość geograficzna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textAlignment="center"
                android:textSize="18sp"/>

    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pressure"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_span="2"/>

    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Ciśnienie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:textAlignment="center"
                android:layout_span="2"
                android:textSize="18sp"/>

    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/avatars[2]"
                android:layout_span="2"
                android:id="@+id/weatherIcon"/>

    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </TableRow>
</TableLayout>